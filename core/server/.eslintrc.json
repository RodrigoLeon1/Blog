{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "arrow-parens": "off",
    "comma-dangle": "off",
    "spaced-comment": "off",
    "object-curly-newline": "off",
    "import/extensions": "off",
    "semi": "off",
    "linebreak-style": "off",
    "lines-between-class-members": "off",
    "nonblock-statement-body-position": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  }
}
